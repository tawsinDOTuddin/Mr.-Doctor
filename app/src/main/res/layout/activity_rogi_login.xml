<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rrr"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uddin.tawsin.mrdoctor.rogi_login"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello Sir"
        android:textColor="#ffffff"
        android:id="@+id/textView03"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="103dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log In"
        android:textColor="#ffffff"
        android:id="@+id/textView04"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView03"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="118dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUsername01"
        android:hint="username"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/textView03"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/textView03"
        android:layout_alignEnd="@+id/textView03"
        android:inputType="text" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#ffffff"
        android:id="@+id/editTextPassword01"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/editTextUsername01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/editTextUsername01"
        android:layout_alignEnd="@+id/editTextUsername01"
        android:hint="password" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/buttonLogin01"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editTextPassword01"
        android:layout_centerHorizontal="true"
        android:background="#1C2833"
        android:textColor="#ffffff"
        android:onClick="kk01"
        android:textStyle="normal|bold"
        android:layout_alignParentStart="false" />

    <Button
        android:text="REGISTER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button05"
        android:onClick="reg01"
        android:background="#1C2833"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:textStyle="normal|bold" />


</LinearLayout>

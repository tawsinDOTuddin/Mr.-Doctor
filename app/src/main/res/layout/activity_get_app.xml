<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_get_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ooo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uddin.tawsin.mrdoctor.getApp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:text="GET APPOINTMENT LIST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_marginTop="15dp"
                android:background="#1C2833"
                android:textColor="#ffffff"
                android:onClick="bbb3" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginTop="25dp"
                android:textColor="#ffffff" />
            <Button
                android:text="CLEAR"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:layout_marginTop="10dp"
                android:background="#1C2833"
                android:textColor="#ffffff"
                android:onClick="bbb4"
                android:layout_marginLeft="180dp"
                android:padding="15dp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
